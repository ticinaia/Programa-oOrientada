package universidade;
public class Fornecedor extends Pessoa {
    private double valorCredito;
    private double valorDivida;

    public Fornecedor (String nome, String endereco, String telefone, double valorCredito, double valorDivida){
        super(nome, endereco, telefone);
        this.valorCredito = valorCredito;
        this.valorDivida = valorDivida;
    }
    public double getValorCredito(){
        return valorCredito;
    }
    public double getValorDivida(){
        return valorDivida;
    }
    public void setValorCredito(double valorCredito){
        this.valorCredito = valorCredito;
    }
    public void setValorDivida(double valorDivida){
        this.valorDivida = valorDivida;
    }
    public void exibirInfo(){
        System.out.printf("Você possui %.2f de créditos.", this.valorCredito);
        System.out.println();
        System.out.printf("Valor da sua dívida:%n" + this.valorDivida);
    }
    public void obterSaldo(){
        double diferenca = (valorCredito - valorDivida);
        System.out.printf("%nSeu saldo é de: %f%n", diferenca);

    }
    

}
